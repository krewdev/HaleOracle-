{
  "name": "hale-oracle",
  "version": "1.0.0",
  "description": "HALE Oracle - Autonomous forensic auditor for smart contract deliveries",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:testnet": "hardhat run scripts/deploy.js --network arcTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network arc",
    "deploy:paymaster": "hardhat run scripts/deploy_paymaster.js --network arcTestnet",
    "deploy:usdc-paymaster": "hardhat run scripts/deploy_usdc_paymaster.js --network arcTestnet",
    "deploy:usdc-paymaster:sepolia": "hardhat run scripts/deploy_usdc_paymaster_sepolia.js --network sepolia",
    "authorize:oracle": "hardhat run scripts/authorize_oracle_paymaster.js --network arcTestnet",
    "deposit:paymaster": "hardhat run scripts/deposit_paymaster.js --network arcTestnet",
    "deposit:usdc": "hardhat run scripts/deposit_usdc_paymaster.js --network arcTestnet",
    "verify": "node scripts/verify.js",
    "verify:manual": "hardhat verify"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.5.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.17",
    "typechain": "^8.3.2"
  },
  "dependencies": {
    "@circle-fin/developer-controlled-wallets": "^10.0.1",
    "@nomicfoundation/edr-darwin-arm64": "^0.12.0-next.22",
    "dotenv": "^16.3.1",
    "ethers": "^6.16.0",
    "fp-ts": "^2.16.11"
  }
}
